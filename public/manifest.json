{
  "name": "niji-mado-ext",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "browser_action": {
    "default_popup": "./popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://niji-mado.web.app/*"],
      "js": ["content_scripts.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["./background.js"]
  },
  "permissions": ["https://*/*", "tabs", "windows"]
}
